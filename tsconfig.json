{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "typeRoots": [
            "./src/typings",
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}